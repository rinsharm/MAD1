<?xml version="1.0" encoding="utf-8"?>
<GridLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#000"
    android:columnCount="4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed1"
            android:layout_width="410dp"
            android:layout_height="224dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:backgroundTint="#39ADE1" />


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8F6969"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="1" />

        <Button
            android:id="@+id/bu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="2" />

        <Button
            android:id="@+id/bu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="3" />

        <Button
            android:id="@+id/buadd"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:onClick="OperatorEvent"
            android:text="+" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8F6969"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="4" />

        <Button
            android:id="@+id/bu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="5" />

        <Button
            android:id="@+id/bu6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="6" />

        <Button
            android:id="@+id/busub"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:onClick="OperatorEvent"
            android:text="-" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8F6969"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="7" />

        <Button
            android:id="@+id/bu8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="8" />

        <Button
            android:id="@+id/bu9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="9" />

        <Button
            android:id="@+id/bumult"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:onClick="OperatorEvent"
            android:text="*" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8F6969"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buclr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="CLR" />

        <Button
            android:id="@+id/bu0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="0" />

        <Button
            android:id="@+id/budiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NumberEvent"
            android:text="/" />

        <Button
            android:id="@+id/buequal"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#CC2F2F"
            android:onClick="EqualEvent"
            android:text="=" />


    </GridLayout>


</GridLayout>
